

<% flash.each do |type, message| %>

<div class="alert alert-dismissible 
  <%= 
  case type.to_s
    when "success"
      "alert-success"
    when "error"
      "alert-error"
    when "alert"
      "alert-error"
    when "notice"
      "alert-info"
   end
   %>

 ">
<button class="close" type="button" data-dismiss="alert" aria-hidden="true">x</button> 
<h4>
  <i class="icon fa 
  
  <%= 
  case type.to_s
    when "success"
      "fa-check"
    when "error"
      "fa-ban"
    when "alert"
      "fa-info"
    when "notice"
      "fa-info"
   end
   %>
  
  "></i>
    <%= 
  case type.to_s
    when "success"
      "Success!"
    when "error"
      "Error!"
    when "alert"
      "Alert!"
    when "notice"
      "Information:"
   end
   %>
  </h4>
  <%= message %>
  
</div>

<% end %>