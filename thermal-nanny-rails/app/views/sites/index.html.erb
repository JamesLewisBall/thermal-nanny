
<h1>Sites</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.name %></td>
        <td><%= site.description %></td>
        <td><%= site.note %></td>
        <td>
        <%= link_to 'Subscribe', 
                site_subscribe_path(site), 
                action: :subscribe  , 
                method: :post , 
                # class: "btn btn-block btn-default" 
                class: "btn btn-block btn-primary btn-xs disabled"
                %>
        
        </td>
	<td><%= link_to 'Show', site %></td>
        <td><%= link_to 'Edit', edit_site_path(site) %></td>
        <% if current_user.globaladmin %>
        <td><%= link_to 'Destroy', 
                    site, 
                    method: :delete, 
                    data: { confirm: 'Are you sure?' }, 
                    class: "btn btn-block btn-danger btn-xs "
                    %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= 
if current_user.globaladmin
  link_to 'New Site', new_site_path
end
 %>
